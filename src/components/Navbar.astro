<header class="flex items-center bg-white   ">
    <nav class="static h-[90px] flex w-full items-center">
        <ul id="menu" data-status="hidden" class="duration-500  bg-white  flex  relative w-full flex-col gap-2 justify-around mt-[-350px] md:mt-[0]  md:flex-row mx-auto md:w-[90%]">
            <li class="md:hidden">
                <hr />
            </li>
