---
const { titre } = Astro.props;
---

<div class="hero" data-titre={titre}>

</div>


<style>
    .hero {
        display:flex;
        --main-bg-color: white;
        justify-content: center;
        align-items: center;
        width: 100vw;
        background-color: red;
        background-image: linear-gradient(rgba(0, 0, 0, 0.0), rgba(0, 0, 0, 0.30)),url("/assets/index/femmetasse.png") ;
        background-size: cover;
        background-position: center center ;
        height: 400px;
    
    }
</style>

<style>
    .hero::after {
        content: attr(data-titre);;
        color: white;
        font-size: 48px;
        filter: brightness(100%);
        font-family: Tenor;
        text-shadow: 5px 5px 3px rgba(0,0,0,0.3);
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }
</style>

