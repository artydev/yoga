---
import Layout from "../../layouts/Layout.astro";
import Info from "../../components/Info.astro";
import Contactezmoi from "../../widgets/Contactezmoi.astro";
---

<Layout>
   <div class="relative w-full flex flex-col justify-center">
      <div class="flex flex-row justify-around gap-0">
         <div class="bg-slate-50">
            <img src="/assets/index/skyseeing.png" alt="Astro">
         </div>
         <div class="bg-slate-50">
            <img src="/assets/index/massage.png" alt="Astro">
         </div>
      </div>
      <div class="absolute w-[100vw] flex flex-row justify-center">
         <Info></Info>
      </div>
     
   </div>
</Layout>


<script>
   (function styleLink  () {
      let link = document.querySelector("[data-name='accueil']") as HTMLElement
      link.setAttribute("style", `
        text-decoration: orangered;
        cursor: pointer;
        color:black;
        text-decoration-line: underline;
        text-underline-offset: 5px;
        text-decoration-thickness: 0.2rem; 
        user-select: none;`)
     
      
      

   })()
</script>