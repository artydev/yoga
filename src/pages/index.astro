---
import Layout from "../layouts/Layout.astro";
import Info from "../components/Info.astro";

---

<Layout>
   <section class="hero">
      <div style="width:50%">
         <img src="/assets/index/skyseeing.png" alt="dame levant les yeux">
      </div>
   
      <div style="width:50%">
         <img src="/assets/index/massage.png" alt="dame levant les yeux">
      </div>
   </section>
   <section class="bienvenue">
      <div class="backimg" style="width:50%">
         <img src="/assets/index/francoisejean.png" alt="dame levant les yeux">
      </div>
      <div style="width:50%">
         <div>
            <h1>
               Bienvenue
            </h1>
            <p>
               Lorem ipsum dolor sit amet, consectetur adipisicing elit. Officia architecto ut consectetur, nesciunt nulla aliquam assumenda! Provident quibusdam corrupti dolore similique ex error maxime sunt, harum laudantium nulla non dolor.
            </p>
         </div>

      </div>
      </div>
   </section>
   <section class="prosecenter">
      <div>
         <h1>ProseCenter</h1>
      </div>
   </section>
   <section class="cards">
      <div>
         <h1>Cards</h1>
      </div>
   </section>
   <section class="proserightmage">
      <div>
         <h1>proserightmage</h1>
      </div>
   </section>  
   <section class="certificats">
      <div>
         <h1>certificats</h1>
      </div>
   </section>     
   <section class="temoignages">
      <div>
         <h1>temoignages</h1>
      </div>
   </section>  
</Layout>


<style>
   .hero {
      display: flex;
      justify-content: space-around;
      gap: 5px;
   }

   .hero > div {
     display: flex;
     justify-content: space-around;
     margin-top: 55px;
   
   }

   .hero img {
      width: 100%;
      object-fit:fill;
   }

   .bienvenue {
      display:flex;
      justify-content: space-around;
      gap: 5px;
      margin-top: 50px;
   }

 
   .bienvenue > div {
     display: flex;
     justify-content: space-around;
   }


   .backimg {
      background-image: url("/assets/index/tachebleu.png");
      background-repeat: no-repeat;
      background-position: bottom;
      background-size: contain;
   }

   .backimg img {
      object-fit: cover;
      transform: scale(0.85);
  
   }


   .prosecenter {
      height:500px;
      background-color: darkkhaki;
   }

   .cards {
      height:500px;
      background-color: pink;
   }
   
   .proserightmage {
      height:500px;
      background-color: blue;
   }

   .certificats {
      height:500px;
      background-color: green;
   }

   .temoignages {
      height:500px;
      background-color: lightcoral;
   }
</style>


<script>
   (function styleLink  () {
      let link = document.querySelector("[data-name='accueil']") as HTMLElement
      link.setAttribute("style", `
        text-decoration: orangered;
        cursor: pointer;
        color:black;
        text-decoration-line: underline;
        text-underline-offset: 5px;
        text-decoration-thickness: 0.2rem; 
        user-select: none;`)
   })()
</script>