      object-fit: cover;
   }
</style>


<script>
   (function styleLink  () {
      let link = document.querySelector("[data-name='accueil']") as HTMLElement
      link.setAttribute("style", `
        text-decoration: orangered;
        cursor: pointer;
        color:black;
        text-decoration-line: underline;
        text-underline-offset: 5px;
        text-decoration-thickness: 0.2rem; 
        user-select: none;`)
   })()
</script>