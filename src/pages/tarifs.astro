---
import Layout from "../layouts/Layout.astro";
import HeroMassage from "../components/HeroOther.astro";
import TarifComponent from "../components/TarifComponent.astro";
---

<Layout>
  <div>
    <HeroMassage titre="TARIFS" />
    <div class="tc">
      <TarifComponent />
    </div>
  </div>
</Layout>

<style>
  .tc {
    max-width: 80%;
    margin:0 auto;
    padding-bottom: 3rem;
  }
</style>


<script>
  (function styleLink() {
    let link = document.querySelector("[data-name='tarifs']") as HTMLElement;
    link.setAttribute(
      "style",
      `
         text-decoration: orangered;
         cursor: pointer;
         color:black;
         text-decoration-line: underline;
         text-underline-offset: 5px;
         text-decoration-thickness: 0.2rem; 
         user-select: none;`
    );
  })();

  (function () {
    const image = document.getElementById("imgwitness");
    const foliage = image?.querySelector("img");
    if (foliage) {
      foliage.style.display = "block";
      foliage.style.position = "relative";
      foliage.style.top = "100px";
    }
  })();
</script>
