---
import Layout from "../layouts/Layout.astro";
import HeroMassage from "../components/HeroMassage.astro";
---

<Layout>
   <div class="container mt-16">
      <HeroMassage titre="TARIFS"></HeroMassage>
   </div>
</Layout>

<script>
   (function styleLink() {
     let link = document.querySelector("[data-name='tarifs']") as HTMLElement;
     link.setAttribute(
       "style",
       `
         text-decoration: orangered;
         cursor: pointer;
         color:black;
         text-decoration-line: underline;
         text-underline-offset: 5px;
         text-decoration-thickness: 0.2rem; 
         user-select: none;`
     );
   })();
 
   (function () {
     const image = document.getElementById("imgwitness");
     const foliage = image?.querySelector("img");
     if (foliage) {
       foliage.style.display = "block";
       foliage.style.position = "relative";
       foliage.style.top = "100px";
     }
   })();
 </script>
 