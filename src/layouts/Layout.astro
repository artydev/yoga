---
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
import Menubar from "../components/Menubar.astro";
import { GoogleFontsOptimizer } from "astro-google-fonts-optimizer";
import RotateDevice from "../components/RotateDevice.astro";
import ModalCertif from "../components/ModalCertif.astro";
var dev = true
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/globalstyle.css" />
    <GoogleFontsOptimizer
      url="https://fonts.googleapis.com/css2?family=Tenor+Sans&display=swap"
    />
    <GoogleFontsOptimizer
      url="https://fonts.googleapis.com/css2?family=Allura&display=swap"
    />
    <script
      type="module"
      type="text/javascript"
      src="https://cdnjs.cloudflare.com/ajax/libs/ionicons/5.1.2/ionicons/ionicons.esm.js"
    ></script>
    <title>YOGA</title>
  </head>

  <body>
    <Navbar />
    <div style="width:100vw;margin:0 auto;"></div>
    <slot />
    <Footer />
    <ModalCertif />
    <a id="mailer"></a>
    {
     ({dev}) 
      &&  <script is:inline src="/js/dest.js"></script>
      ||  <script is:inline src="/js/destobfus.js"></script>
    }
   
    {
      ({dev}) && console.log("IN EV")
    }

    <script is:inline>
      window.sendMail = function (target = "mailer") {
        document
          .getElementById(target)
          ?.setAttribute(
            "href",
            `mailto:${destx()}?subject=demande%20de%20contact`
          );
        document.getElementById(target)?.click();
      }
    </script>
  </body>
</html>
